<h1>ログイン画面</h1>

<%= form_tag top_login_path , method: :post do %>
<p><%= label_tag :uid, 'ユーザーID : ' %>
<%= text_field_tag :uid %></p>
<p><%= label_tag :pass, 'パスワード : ' %>
<%= password_field_tag :pass %></p>
<%= submit_tag 'ログイン' %>
<% end %>

<p><%= link_to 'サインアップ', new_user_path %></p>


<p><%= link_to '《管理者用》', users_path %></p>